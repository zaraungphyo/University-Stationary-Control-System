@model sa47.team8ad.SSIS.Models.ItemAdjustmentViewModel

@{
    ViewBag.Title = "Add Adjustment Item";
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />
@if (TempData["errorMessage"] != null)
{
    <div class="alert alert-danger fade in">
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        <strong>@TempData["errorMessage"]</strong>
    </div>
}
<div class="box box-danger">
    <div class="box-header">
        <h3 class="box-title">Add Adjustment Item</h3>
    </div>
    <div class="box-body">


        @using (Html.BeginForm("AddAdjustmentItem", "InventoryAdjustment", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.HiddenFor(model => model.ItemId)
                @Html.HiddenFor(model => model.Item.ItemId)
                <div class="form-group">
                    @Html.LabelFor(model => model.Item.ItemDescription, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @*@Html.EditorFor(model => model.ItemId, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ItemId, "", new { @class = "text-danger" })*@
                        @Html.EditorFor(model => model.Item.ItemDescription, new { htmlAttributes = new { @class = "form-control", @list = "dlItemDescription" } })

                        <datalist id="dlItemDescription" name="ItemDescription"></datalist>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.AdjustmentQuantity, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.AdjustmentQuantity, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AdjustmentQuantity, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Reason, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.Reason, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Reason, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-4">
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-danger" })
                        <input type="submit" value="Create" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        var items = [];
        $.ajax({
            url: '@Url.Action("itemsAutoComplete", "PurchaseOrder")',
            type: 'GET',
            contentType: 'application/json; charset=utf-8',
            success: function (data, statusCode) {
                items = data;
                $.each(data, function (key, values) {
                    $("#dlItemDescription").append($("<option>").attr('data-value', values.ItemId).text(values.ItemDescription));
                });
            }
        });

        $('#Item_ItemDescription').change(function () {
            var val = $('#Item_ItemDescription').val();
            var id = $('#dlItemDescription option').filter(function () {
                return this.value == val;
            }).data('value');
            $("#ItemId").val(id);
            $("#Item_ItemId").val(id);
        });
    });
</script>

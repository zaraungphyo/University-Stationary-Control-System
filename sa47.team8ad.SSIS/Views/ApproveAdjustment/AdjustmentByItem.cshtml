@model IEnumerable<sa47.team8ad.SSIS.Models.ItemAdjustmentViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Adjustment ByItem";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />

<div class="box box-danger">
    <div class="box-header">
        <h3 class="box-title">Adjustment ByItem</h3>
    </div>
    <div class="box-body">
       
            <h2> @Model.FirstOrDefault().ItemDescription - Adjustment Details</h2>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>  # </th>
                        <th>
                            Date Submitted
                        </th>
                        <th>
                            Adjustment Quantity
                        </th>
                        <th>
                            Reason
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 0;
                        foreach (var item in Model)
                        {
                            i++;
                            <tr id="row" @i>
                                <td>
                                    <text>@i</text>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ItemAdjustmentDate)
                                </td>
                                @if (item.AdjustmentQuantity > 0)
                                {
                                    <td>+@Html.DisplayFor(modelItem => item.AdjustmentQuantity)</td>

                                }
                                else
                                {
                                    <td>@Html.DisplayFor(modelItem => item.AdjustmentQuantity)</td>
                                }
                                <td>
                                    @Html.DisplayFor(modelItem => item.Reason)
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        
        <p>
            @Html.ActionLink("Back to Adjustment List", "AdjustmentList",new { @class="btn btn-success"})
        </p>
        </div>
</div>
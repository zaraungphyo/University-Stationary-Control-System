@model IEnumerable<sa47.team8ad.SSIS.Models.ItemRequisitionViewModel>

@{
    ViewBag.Title = "HistoryAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />

<div class="box box-danger">
    <div class="box-header">
        <h3 class="box-title">Approve Request</h3>
    </div>
    <div class="box-body">
        @*<div><br /></div>*@
        @*<div>
            Search by :
            @Html.DropDownList("History", new List<SelectListItem>
            {
               new SelectListItem{ Text="Weekly", Value = "1" },
               new SelectListItem{ Text="Monthly", Value = "2" },
               new SelectListItem{ Text="All", Value = "3" },
            })

        </div>*@
        @*<div><br /></div>*@
        @*<div class="text-sm-center">*@

            <table id="bootstrap-data-table" class="table table-striped table-bordered">

                <thead class="table-info">
                    <tr>
                        <th>Requested By</th>
                        <th>Requested Date</th>
                        @*<th>Total Number of Item Requests</th>*@
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var itemRequesitions in Model)
                    {
                        <tr>
                            <td>@itemRequesitions.Employee.EmployeeName</td>
                            <td>@itemRequesitions.RequisitionDate.Date.ToShortDateString()</td>
                            @*<td>@itemRequesitions.ItemRequisitionDetails.Count</td>*@
                            <td>
                                @Html.ActionLink("View Details", "HistoryDetails", new { id = itemRequesitions.RequisitionId })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        @*</div>*@

    </div>
</div>

    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#bootstrap-data-table").DataTable()
        });
    </script>


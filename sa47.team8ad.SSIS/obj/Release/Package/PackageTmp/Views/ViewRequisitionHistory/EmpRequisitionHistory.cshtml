@model IEnumerable<sa47.team8ad.SSIS.Models.ItemRequisitionDetailViewModel>

@{
    ViewBag.Title = "Requisition History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />

<div class="box box-danger">
    <div class="box-header">
        <h3 class="box-title">Requisition History</h3>
    </div>
    <div class="box-body">
        <div class="text-sm-center">

            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                <tr>
                    <th>
                        Item Description
                    </th>
                    <th>
                        Request Quantity
                    </th>
                    <th>
                        Receive Quantity
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Remark
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Item.ItemDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NeededQuantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ActualQuantity)
                        </td>
                        <td>
                            @if (item.ApproveStatus == null || item.ApproveStatus == "5")
                            {
                                <p>Pending</p>
                            }
                            else if (item.ApproveStatus == "3")
                            {
                                <p> Approved</p>
                            }
                            else if (item.ApproveStatus == "4")
                            {
                                <p> Rejected</p>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Remark)
                        </td>
                    </tr>
                }

            </table>
        </div>
       
       </div>
    </div>
 

<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script type="text/javascript">
$(document).ready(function () {
    $("#bootstrap-data-table").DataTable()
})

</script>


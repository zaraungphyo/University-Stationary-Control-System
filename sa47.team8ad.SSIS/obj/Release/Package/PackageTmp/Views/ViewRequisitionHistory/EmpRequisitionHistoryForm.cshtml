@model IEnumerable<sa47.team8ad.SSIS.Models.ItemRequisitionViewModel>

@{
    ViewBag.Title = "Requisition History Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />

<div class="box box-danger">
    <div class="box-header">
        <h3 class="box-title">Requisition History Form</h3>
    </div>
    <div class="box-body">
        <table id="bootstrap-data-table" class="table table-striped table-bordered">
            <tr>

                <th>
                    Requisition Date
                </th>
                <th>
                    Form Status
                </th>
                <th></th>
            </tr>

            @foreach (var itemRequesitions in Model)
            {
                <tr>
                    <td>
                        @itemRequesitions.RequisitionDate.Date.ToShortDateString()
                    </td>
                    <td>
                        @if (@itemRequesitions.FormStatus == 2)
                        {
                            <p>Pending</p>
                        }
                        else if (@itemRequesitions.FormStatus <= 1)
                        {
                            <p> Approved/Rejected</p>
                        }
                    </td>
                    <td>
                        @Html.ActionLink("View Details", "EmpRequisitionHistory", new { id = itemRequesitions.RequisitionId },new { @class="btn btn-success"})

                    </td>
                </tr>
            }

        </table>

    </div>
</div>


<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $("#bootstrap-data-table").DataTable()
    })

</script>

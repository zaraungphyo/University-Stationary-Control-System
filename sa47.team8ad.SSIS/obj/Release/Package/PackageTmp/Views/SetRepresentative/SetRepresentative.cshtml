<div class="box box-danger">
    <div class="box-header">
        <h3 class="box-title">Set Deparment Representative</h3>
    </div>
    <div class="box-body">
        @using (Html.BeginForm("SetRepresentative", "SetRepresentative", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                @Html.Label("Employee Name", htmlAttributes: new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.DropDownListFor(x => x.UserId, new SelectList(ViewBag.bindEmployees, "id", "EmployeeName")
                    , htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-10">
                    <button name="submit" class="btn btn-success" type="submit">
                        Set Representative
                    </button>
                </div>
            </div>
        }
    </div>
</div>
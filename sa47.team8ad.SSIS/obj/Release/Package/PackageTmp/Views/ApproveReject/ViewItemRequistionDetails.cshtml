@model IList<sa47.team8ad.SSIS.Models.ItemRequisitionDetailViewModel>
@{
    ViewBag.Title = "ViewItemRequistionDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-danger fade in">
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        <strong>@TempData["Message"]</strong>
    </div>
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<div class="box box-danger">
    <div class="box-header">
        <h3 class="box-title">Item Requistion Details</h3> <!--for employee-->
    </div>
    <div class="box-body">

        @using (Html.BeginForm())
        {


            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="checkBoxAll" class="custom-checkbox" /></th>
                        <th>
                            Item Name
                        </th>
                        <th>
                            Quantity
                        </th>
                        <th>
                            Remark
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="ID" value="@Model[i].ItemId" class="custom-checkbox chkCheckBoxId" />
                            </td>
                            <td>
                                @Html.Hidden("items[" + (@i) + "].ItemId",
                                         Model[i].ItemId)
                                @Html.DisplayFor(x => Model[i].Item.ItemDescription)
                            </td>
                            <td>
                                @Html.DisplayFor(x => Model[i].NeededQuantity)
                            </td>
                            <td>
                                @Html.TextArea("items[" + (@i) + "].Remark",
                                          Model[i].Remark, 1, 25, htmlAttributes: new { style = "width: 100%; max-width: 100%;" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="form-group">
                <div class="col-sm-10">
                    <input type="hidden" name="requestId" value="@ViewBag.requestId" />
                    <input type="submit" name="button" value="Reject" class="btn btn-danger" />
                    <input type="submit" name="button" value="Approve" class="btn btn-success" />
                </div>
            </div>
        }
    </div>
</div>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#bootstrap-data-table").DataTable()
    });

    $('#checkBoxAll').click(function () {
        if ($(this).is(":checked")) {
            $(".chkCheckBoxId").prop("checked", true)
        }
        else {
            $(".chkCheckBoxId").prop("checked", false)
        }
    })
</script>




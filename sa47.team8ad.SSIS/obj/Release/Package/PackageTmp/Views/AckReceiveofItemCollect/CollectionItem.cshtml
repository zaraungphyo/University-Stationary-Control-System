@model IEnumerable<sa47.team8ad.SSIS.Models.DisbursementViewModel>

@{
    ViewBag.Title = "Collect Items";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap.min.css" />
<div class="box box-danger">
    <div class="box-header">
        <h3 class="box-title">Collect Items</h3>
    </div>
    <div class="box-body">
        @{var cpvm = (sa47.team8ad.SSIS.Models.CollectionPointViewModel)ViewBag.CollectionPoint; }
        <p>Collection Point : @cpvm.CollectionPointAddress</p> <br />
        <p>Collection Time : @cpvm.CollectionTime</p>
        <br />
        @if (Model.Count() > 0)
        {
            <table class="table table-striped table-bordered" id="dtBasicExample">
                <tr>
                    <th>#</th>
                    <th>
                        Item Description
                    </th>
                    <th>
                        Collection Quantity
                    </th>
                </tr>
                @{int counter = 0;}
                @foreach (var item in Model)
                {
                    counter++;
                    <tr>
                        <td>@counter</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Item.ItemDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ActualQuantity)
                        </td>
                    </tr>
                }

            </table>
        }
        else
        {
            <div class="panel panel-info">
                <div class="panel-body">
                    There is no requisition to collect.
                </div>
            </div>
        }

    </div>
</div>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#dtBasicExample').DataTable();
    });
</script>
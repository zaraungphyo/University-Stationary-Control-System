@model IEnumerable<sa47.team8ad.SSIS.Models.ItemRequisitionDetailViewModel>
@{
    /**/

    ViewBag.Title = "Stationery Requistion";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
<p>
    @Html.ActionLink("Add Item", "AddItem", null, new { @class = "btn btn-success" })
</p>
<div class="box box-danger">
    <div class="box-header">
        <h3 class="box-title">
            Stationary Requisition
        </h3>
    </div>
    <div class="box-body">

        @*<div class="text-sm-center">*@

            <table id="bootstrap-data-table" class="table table-striped table-bordered">

                <thead class="table-info">
                    <tr>
                        <th>Category</th>
                        <th>Item Description</th>
                        <th>Quantity</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var itemRequesitions in Model)
                    {
                        <tr>
                            <td>@itemRequesitions.Item.Category.CategoryName</td>
                            <td>@itemRequesitions.Item.ItemDescription</td>
                            <td>@itemRequesitions.NeededQuantity</td>
                            <td>
                                @Html.ActionLink("Remove", "RemoveItem", new { itemId = itemRequesitions.ItemId },new { @class="btn btn-danger"})
                                @Html.ActionLink("Edit", "EditItem", new { itemId = itemRequesitions.ItemId }, new { @class = "btn btn-success" })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        @*</div>*@

        @using (Html.BeginForm())
        {
            @*<input type="hidden" name="requestId" value="@ViewBag.requestId" />*@
            <input type="submit" name="button" value="Cancel" class="btn btn-danger" />
            <input type="submit" name="button" value="Confirm" class="btn btn-success" />

        }


    </div>
</div>

<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#bootstrap-data-table").DataTable()
    })

</script>

